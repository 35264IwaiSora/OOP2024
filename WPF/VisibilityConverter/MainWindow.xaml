<Window x:Class="VisibilityConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisibilityConverter"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="300">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="Violet"/>
        </Style>
        <Style x:Key="WhiteBackgroundStyle" TargetType="Button">
            <Setter Property="Background" Value="Violet"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
    </Window.Resources>
    <StackPanel >
        
        <StackPanel.Resources>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            
        </StackPanel.Resources>

        <CheckBox x:Name="CheckBox" Content="設定大項目" IsChecked="True"/>
        <StackPanel Visibility="{Binding IsChecked,ElementName=CheckBox,
            Converter={StaticResource BooleanToVisibilityConverter}}" Margin="20,0,0,0">
            <RadioButton Content="赤" x:Name="rButton" Checked="Button_Checked"/>
            <RadioButton Content="青" x:Name="bButton" Checked="Button_Checked"/>
            <RadioButton Content="緑" x:Name="gButton" Checked="Button_Checked"/>
        </StackPanel>
        <Button Margin="10" Content="ボタン1" Style="{StaticResource WhiteBackgroundStyle}"/>
        <Button Margin="10" Content="ボタン2">
            <Button.Style>
                <Style TargetType="Button" BasedOn="{StaticResource WhiteBackgroundStyle}">
                    <Setter Property="FontSize" Value="18"/>
                </Style>
            </Button.Style>
        </Button>
        <Button Margin="10" Content="ボタン3">
            
        </Button>
    </StackPanel>
</Window>